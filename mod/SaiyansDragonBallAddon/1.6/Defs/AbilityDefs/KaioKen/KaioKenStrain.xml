<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>SR_KaioKenStrainHediff</defName>
    <label>Kaio-Ken Strain</label>
    <description>The physical toll of pushing the body beyond its limits using the Kaio-Ken technique. Multiple uses or higher multipliers increase the strain and its devastating effects.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1, 0.2, 0.2)</defaultLabelColor>
    <isBad>true</isBad>
    <initialSeverity>0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
          <disappearsAfterTicks>8000</disappearsAfterTicks>
          <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <label>Minimal</label>
        <minSeverity>0</minSeverity>
        <painFactor>1.05</painFactor>
        <statFactors>
          <IncomingDamageFactor>1.2</IncomingDamageFactor>
        </statFactors>
      </li>
      <li>
        <label>Minor</label>
        <minSeverity>0.15</minSeverity>
        <painFactor>1.25</painFactor>
        <statFactors>
          <IncomingDamageFactor>1.2</IncomingDamageFactor>
        </statFactors>
      </li>
      <li>
        <label>Moderate</label>
        <minSeverity>0.5</minSeverity>
        <painFactor>1.5</painFactor>
        <hungerRateFactor>1.25</hungerRateFactor>
        <restFallFactor>1.25</restFallFactor>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
        <statFactors>
          <IncomingDamageFactor>1.4</IncomingDamageFactor>
        </statFactors>
      </li>
      <li>
        <label>Severe</label>
        <minSeverity>0.75</minSeverity>
        <painFactor>2.0</painFactor>
        <hungerRateFactor>1.5</hungerRateFactor>
        <restFallFactor>1.5</restFallFactor>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
        <statFactors>
          <IncomingDamageFactor>1.6</IncomingDamageFactor>
        </statFactors>
      </li>
      <li>
        <label>Critical</label>
        <minSeverity>0.9</minSeverity>
        <painFactor>2.5</painFactor>
        <hungerRateFactor>2.0</hungerRateFactor>
        <restFallFactor>2.0</restFallFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
        <statFactors>
          <IncomingDamageFactor>2.0</IncomingDamageFactor>
        </statFactors>
        <statOffsets>
          <PainShockThreshold>-0.15</PainShockThreshold>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>

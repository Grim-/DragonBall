<?xml version="1.0" encoding="utf-8"?>
<Defs>
<ThingDef ParentName="BuildingBase">
    <defName>HyperbolicTimeChamber</defName>
    <label>hyperbolic time chamber</label>
    <description>An advanced training facility that manipulates the flow of time within its confines. Pawns who enter this chamber can train for extended periods while only a fraction of that time passes in the outside world.</description>
    <thingClass>DragonBall.HyperbolicChamber_Building</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/ResearchBenchHiTech</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(7,4)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <constructEffect>ConstructMetal</constructEffect>
    <costList>
      <Steel>250</Steel>
      <Plasteel>120</Plasteel>
      <ComponentSpacer>8</ComponentSpacer>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>12000</WorkToBuild>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(5,5)</size>
    <designationCategory>Misc</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>1200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="DragonBall.CompProperties_Tournament"/>
    </comps>
  </ThingDef>
</Defs>

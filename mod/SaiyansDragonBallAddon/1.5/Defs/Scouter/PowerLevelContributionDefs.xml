<!-- Race Contributions -->
<DragonBall.RacePowerContributionDef>
  <defName>SR_SaiyanRacePowerContribution</defName>
  <label>Saiyan Heritage</label>
  <race>SR_SaiyanRace</race>
  <multiplier>100</multiplier>
  <isMultiplier>false</isMultiplier>
</DragonBall.RacePowerContributionDef>

<DragonBall.RacePowerContributionDef>
  <defName>SR_HumanRacePowerContribution</defName>
  <label>Human Heritage</label>
  <race>Human</race>
  <multiplier>20</multiplier>
  <isMultiplier>false</isMultiplier>
</DragonBall.RacePowerContributionDef>

<DragonBall.RacePowerContributionDef>
  <defName>SR_HalfSaiyanRacePowerContribution</defName>
  <label>Half Saiyan Heritage</label>
  <race>SR_HalfSaiyanRace</race>
  <multiplier>80</multiplier>
  <isMultiplier>false</isMultiplier>
</DragonBall.RacePowerContributionDef>

<DragonBall.LevelContributionDef>
  <defName>SR_LevelPowerContribution</defName>
  <label>Level</label>
  <multiplier>1.1</multiplier>
  <isMultiplier>false</isMultiplier>
</DragonBall.LevelContributionDef>
</Defs>

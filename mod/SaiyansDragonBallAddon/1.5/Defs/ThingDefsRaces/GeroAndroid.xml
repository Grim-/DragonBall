<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.ThingDef_AlienRace ParentName="Human">
      <defName>DBZAndroidRace</defName>
      <label>android</label>
      <description>An artificial human created by Dr. Gero, possessing incredible power and requiring no sustenance.</description>
      <statBases>
          <MarketValue>4375</MarketValue>
          <PainShockThreshold>0.95</PainShockThreshold>
          <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
          <ArmorRating_Heat>0.4</ArmorRating_Heat>
          <ComfyTemperatureMin>-100</ComfyTemperatureMin>
          <ComfyTemperatureMax>100</ComfyTemperatureMax>
          <ToxicResistance>1.0</ToxicResistance>
          <ToxicEnvironmentResistance>1.0</ToxicEnvironmentResistance>
      </statBases>

      <tools Inherit="False">
  			<li>
  				<label>left fist</label>
  				<capacities>
  					<li>Blunt</li>
  				</capacities>
  				<power>12</power>
  				<cooldownTime>2</cooldownTime>
  				<armorPenetration>0.1</armorPenetration>
  				<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
  				<surpriseAttack>
  					<extraMeleeDamages>
  						<li>
  							<def>Stun</def>
  							<amount>14</amount>
  						</li>
  					</extraMeleeDamages>
  				</surpriseAttack>
  			</li>
  			<li>
  				<label>right fist</label>
  				<capacities>
  					<li>Blunt</li>
  				</capacities>
  				<power>12</power>
  				<cooldownTime>2</cooldownTime>
  				<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
  				<armorPenetration>0.1</armorPenetration>
  				<surpriseAttack>
  					<extraMeleeDamages>
  						<li>
  							<def>Stun</def>
  							<amount>14</amount>
  						</li>
  					</extraMeleeDamages>
  				</surpriseAttack>
  			</li>
  			<li>
  				<label>teeth</label>
  				<capacities>
  					<li>Bite</li>
  				</capacities>
  				<power>12</power>
  				<armorPenetration>0.1</armorPenetration>
  				<cooldownTime>2</cooldownTime>
  				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
  				<chanceFactor>0.07</chanceFactor>
  			</li>
  			<li>
  				<label>head</label>
  				<capacities>
  					<li>Blunt</li>
  				</capacities>
  				<power>12</power>
  				<armorPenetration>0.1</armorPenetration>
  				<cooldownTime>2</cooldownTime>
  				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
  				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
  				<chanceFactor>0.2</chanceFactor>
  			</li>
  		</tools>
      <race>
          <lifeExpectancy>1000</lifeExpectancy>
          <baseBodySize>1</baseBodySize>
          <baseHealthScale>1.2</baseHealthScale>
          <baseHungerRate>0</baseHungerRate>
          <foodType>None</foodType>
      </race>

      <alienRace>
          <generalSettings>
    				<humanRecipeImport>true</humanRecipeImport>
    				<allowHumanBios>false</allowHumanBios>
            <immuneToAge>true</immuneToAge>
    				<alienPartGenerator Inherit="False">
    					<bodyTypes>
    						<li>Male</li>
    						<li>Hulk</li>
    						<li>Female</li>
    						<li MayRequire="Ludeon.RimWorld.Biotech">Child</li>
    						<li MayRequire="Ludeon.RimWorld.Biotech">Baby</li>
    					</bodyTypes>
    					<headTypes>
        						<li>Male_AverageNormal</li>
        						<li>Female_AverageNormal</li>
    					</headTypes>
    				</alienPartGenerator>
    				<reproduction>
            <maleFertilityAgeFactor>
              <points>
                <li>(14, 0)</li>
                <li>(18, 0)</li>
                <li>(70, 0)</li>
                <li>(90, 0)</li>
              </points>
            </maleFertilityAgeFactor>
            <femaleFertilityAgeFactor>
              <points>
                <li>(14, 0)</li>
                <li>(20, 0)</li>
                <li>(35, 0)</li>
                <li>(50, 0)</li>
                <li>(60, 0)</li>
                <li>(65, 0)</li>
                <li>(70, 0)</li>
              </points>
            </femaleFertilityAgeFactor>
    				</reproduction>
    			</generalSettings>
          <raceRestriction>
            <onlyUseRaceRestrictedXenotypes>true</onlyUseRaceRestrictedXenotypes>
            <whiteXenotypeList>
              <li>DBZAndroid</li>
            </whiteXenotypeList>
            <xenotypeList>
              <li>DBZAndroid</li>
            </xenotypeList>
        </raceRestriction>
          <graphicPaths>
              <body>Things/Pawn/Humanlike/Bodies/</body>
              <head>Things/Pawn/Humanlike/Heads/</head>
              <skinShader>Cutout</skinShader>
          </graphicPaths>
      </alienRace>
  </AlienRace.ThingDef_AlienRace>

  <XenotypeDef>
    <defName>DBZAndroid</defName>
    <label>android</label>
    <description>An artificial being created by Dr. Gero, possessing incredible power and advanced technology.</description>
    <descriptionShort>A powerful artificial being created through Dr. Gero's advanced technology.</descriptionShort>
    <iconPath>UI/Icons/Xenotypes/Baseliner</iconPath>
    <inheritable>false</inheritable>
    <!-- Customization -->
    <displayPriority>100</displayPriority>
    <nameMaker>DBZAndroidNames</nameMaker>
    <genes>
        <li>SR_AndroidGene</li>
    </genes>
  </XenotypeDef>

  <PawnKindDef ParentName="BasePlayerPawnKind">
    <defName>DBZAndroidColonist</defName>
    <label>android colonist</label>
    <race>DBZAndroidRace</race>
    <defaultFactionType>PlayerColony</defaultFactionType>
    <chemicalAddictionChance>0</chemicalAddictionChance>
    <minGenerationAge>20</minGenerationAge>
    <maxGenerationAge>30</maxGenerationAge>
    <initialResistanceRange>1~1</initialResistanceRange>
    <initialWillRange>10</initialWillRange>
    <backstoryFiltersOverride>
      <li>
        <categories>
          <li>RedRibbonAndroid</li>
        </categories>
      </li>
    </backstoryFiltersOverride>
    <xenotypeSet>
        <xenotypeChances>
            <DBZAndroid>1.0</DBZAndroid>
        </xenotypeChances>
    </xenotypeSet>
    <!-- Basic apparel requirements -->
    <apparelRequired>
      <li>Apparel_BasicShirt</li>
      <li>Apparel_Pants</li>
    </apparelRequired>
  </PawnKindDef>


  <BackstoryDef>
  <defName>RedRibbonCreation</defName>
  <title>Laboratory Creation</title>
  <titleShort>Lab Android</titleShort>
  <baseDesc>[PAWN_nameDef] was created in Dr. Gero's laboratory as part of the Red Ribbon Army's android program. Their early activation period was spent learning basic functions and combat protocols.</baseDesc>
  <slot>Childhood</slot>
  <spawnCategories>
    <li>RedRibbonAndroid</li>
  </spawnCategories>
  <skillGains>
    <Shooting>4</Shooting>
    <Melee>4</Melee>
  </skillGains>
  <workDisables>
    <li>Caring</li>
  </workDisables>
</BackstoryDef>

<BackstoryDef>
  <defName>RedRibbonSoldier</defName>
  <title>Red Ribbon Android</title>
  <titleShort>RR Android</titleShort>
  <baseDesc>[PAWN_nameDef] served as one of Dr. Gero's combat androids, programmed for ultimate efficiency in battle. After the fall of the Red Ribbon Army, they continued to operate independently, driven by their core programming.</baseDesc>
  <slot>Adulthood</slot>
  <spawnCategories>
    <li>RedRibbonAndroid</li>
  </spawnCategories>
  <skillGains>
    <Shooting>6</Shooting>
    <Melee>6</Melee>
    <Construction>4</Construction>
  </skillGains>
  <workDisables>
    <li>Caring</li>
  </workDisables>
</BackstoryDef>

<BackstoryDef>
  <defName>SelfAwareAndroid</defName>
  <title>Self-Aware Android</title>
  <titleShort>Free Mind</titleShort>
  <baseDesc>[PAWN_nameDef] developed consciousness during their early activation period in Dr. Gero's laboratory. Unlike their militant counterparts, they began questioning their purpose and developing genuine curiosity about the world around them.</baseDesc>
  <slot>Childhood</slot>
  <spawnCategories>
    <li>RedRibbonAndroid</li>
  </spawnCategories>
  <skillGains>
    <Intellectual>4</Intellectual>
    <Social>3</Social>
    <Crafting>3</Crafting>
  </skillGains>
</BackstoryDef>

<BackstoryDef>
  <defName>FreeAndroid</defName>
  <title>Liberated Android</title>
  <titleShort>Free Android</titleShort>
  <baseDesc>After breaking free from Dr. Gero's control, [PAWN_nameDef] chose to live among humans and other beings, developing their own identity and purpose. They learned to balance their incredible capabilities with a growing sense of empathy and understanding.</baseDesc>
  <slot>Adulthood</slot>
  <spawnCategories>
    <li>RedRibbonAndroid</li>
  </spawnCategories>
  <skillGains>
    <Social>6</Social>
    <Medicine>4</Medicine>
    <Crafting>4</Crafting>
    <Shooting>3</Shooting>
    <Melee>3</Melee>
  </skillGains>
</BackstoryDef>

</Defs>

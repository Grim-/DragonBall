<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="FactionBase" Name="RaidingSaiyanBase">
    <defName>DragonBall_RaidingSaiyanBase</defName>
    <pawnSingular>Saiyan</pawnSingular>
    <pawnsPlural>Saiyans</pawnsPlural>
    <categoryTag>Saiyan</categoryTag>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <fixedName>Saiyans</fixedName>
    <permanentEnemy>true</permanentEnemy>
    <factionIconPath>World/WorldObjects/Expanding/Sites/DownedRefugee</factionIconPath>
    <techLevel>Spacer</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
      </li>
    </backstoryFilters>
    <hidden>true</hidden>
    <autoFlee>false</autoFlee>
    <apparelStuffFilter>
      <thingDefs>
        <li>Synthread</li>
        <li>Hyperweave</li>
        <li>Plasteel</li>
      </thingDefs>
    </apparelStuffFilter>
    <allowedCultures>
      <li>Corunan</li>
    </allowedCultures>
    <disallowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
    </disallowedMemes>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <raidLootMaker>PirateRaidLootMaker</raidLootMaker>
    <xenotypeSet Inherit="False">
      <xenotypeChances>
        <SR_Saiyan>999</SR_Saiyan>
      </xenotypeChances>
    </xenotypeSet>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(700, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
		      <SR_SaiyanInvader>6</SR_SaiyanInvader>
          <SR_SaiyanWarrior>7</SR_SaiyanWarrior>
          <SR_SaiyanBoss>5</SR_SaiyanBoss>
		      <SR_Saibamen>7</SR_Saibamen>
        </options>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <commonality>100</commonality>
        <options>
          <SR_SaiyanInvader>6</SR_SaiyanInvader>
          <SR_SaiyanWarrior>7</SR_SaiyanWarrior>
          <SR_SaiyanBoss>5</SR_SaiyanBoss>
          <SR_Saibamen>7</SR_Saibamen>
        </options>
      </li>
    </pawnGroupMakers>
    <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>2000</configurationListOrderPriority>
  </FactionDef>
</Defs>

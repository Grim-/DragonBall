<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef>
        <defName>DragonBallBlessingOfFullBelly</defName>
        <label>blessing Of full belly</label>
        <description>Periodically provides nutrition to the bearer.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.5, 0.8, 0.5)</defaultLabelColor>
        <isBad>false</isBad>
        <comps>
            <li Class="DragonBall.HediffCompProperties_FoodProvider">
                <nutritionAmount>0.25</nutritionAmount>
                <ticksBetweenFeeding>6000</ticksBetweenFeeding>
                <showMote>true</showMote>
            </li>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>3600000</disappearsAfterTicks>  <!-- 60 days = 3,600,000 ticks -->
                <showRemainingTime>true</showRemainingTime>
            </li>
        </comps>
    </HediffDef>
</Defs>
